  width:100%;
  padding:12px;
  border-radius:8px;
  border:1px solid #ddd;
  margin-bottom:15px;
}

.table-box {
  background:white;
  border-radius:12px;
  padding:10px;
  overflow:auto;
  box-shadow:0 5px 10px rgba(0,0,0,.05);
}

